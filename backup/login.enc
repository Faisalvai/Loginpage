if [ -f "/data/data/com.termux/files/usr/tmp/anim.success" ];then cat /data/data/com.termux/files/usr/etc/login-config/motd.login ;exit
else
main() {
spin () {
local pid=$!
local delay=0.05
local spinner=( '⠋' '⠙' '⠹' '⠼' '⠴' '⠦' '⠧' '⠇' '⠏' )
while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do
for i in "${spinner[@]}"
do
        HIDCRSR
        echo -ne "\e[0;1;48;2;41;121;255m\r  [!] Checking Input... \e[0;1;90;48;2;0;230;118m      [ $i ]       \033[3m\033[0m   ";
        sleep $delay
        printf "\b\b\b\b\b\b";
done
done
printf "\b\b\b\b\b\b\b\b\b\b\b\b\b\b\b"
if [[ $1 == granted ]]; then
printf "\e[0;1;48;2;41;121;255m\e[0;1;90;48;2;0;230;118m [ACCSES GRANTED] \e[0m\n"
echo"";
NORM
elif [[ $1 == denied ]]; then
printf "\e[0;1;48;2;41;121;255m\e[0;1;48;2;200;0;0m [ACCESS DENIED]  \e[0m\n"
fi
}


getPassword() {
unset password
while IFS= read -p "$prompt" -r -s -n 1 char
do
    if [[ $char == $'\0' ]] ; then
        break
    fi
    if [[ $char == $'\177' ]] ; then
        prompt=$'\b \b'
        password="${password%?}"
    else
        prompt='*'
        password+="$char"
    fi
done
}

PUT(){ echo -en "\033[${1};${2}H";}
HIDCRSR(){ echo -en "\033[?25l";}
NORM(){ echo -en "\033[?12l\033[?25h";}

bash /data/data/com.termux/files/usr/etc/login-config/header/header.ui
trap '' 2
bash /data/data/com.termux/files/usr/etc/login-config/header/header.option
PUT 11 24
printf "\e[1;48;2;41;121;255m                "
PUT 10 24
printf "\e[1;90;48;2;0;230;118m                "
PUT 10 24
printf "\e[1;90;48;2;0;230;118mankush\e[0;1m" | pv -qL 20
PUT 11 24
printf "\e[1;48;2;41;121;255m"
getPassword

if [[ $password = "123" ]];then
echo"";
echo"";
(sleep 1) &> /dev/null & spin granted
cd /data/data/com.termux/files/usr/tmp ; touch anim.success ; cd /data/data/com.termux/files/home
trap 5

else
trap '' 2
echo"";
echo"";
(sleep 1) &> /dev/null & spin denied ; printf "\e[1;91m" ; kill -9 $PPID
fi
trap 5
if [ -f "/data/data/com.termux/files/usr/etc/login-config/font/font.login" ];then cd /data/data/com.termux/files/usr/etc/login-config/font ; bash font.login ;fi ; } ;fi
trap '' SIGTSTP
trap '' SIGINT
main
